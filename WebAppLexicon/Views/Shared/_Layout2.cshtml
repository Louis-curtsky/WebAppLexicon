<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" charset="UTF-8" />
    <title>@ViewData["Title"] - WebAppLexicon</title>
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- This is my own style sheet for admin maintenance -->
    <link rel="stylesheet" href="~/css/mystyle2.css">
    <link href="~/css/all.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
            @if (User.Identity.IsAuthenticated)
            {
                if ((User.IsInRole("Admin")) || (User.IsInRole("SuperAdmin")))
                {
                    <div class="container-fluid">
                        <a class="navbar-brand">Members Maintenance</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main_nav"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="main_nav">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Person" asp-action="Index">Members</a>
                                </li>
                                <li class="nav-item dropdown" data-bs-toggle="dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Skills</a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Skills" asp-action="Index">List</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Skills" asp-action="Edit">Update</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Skills" asp-action="Delete">Delete</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Skills" asp-action="Details">Detail</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#"> Languages </a>
                                </li>

                                <li class="nav-item dropdown" data-bs-toggle="dropdown">
                                    <a class="nav-link dropdown-toggle" id="GeoLocation" href="href=" @Url.Action("Country", "Index") "" data-bs-toggle="dropdown">GeoLocation</a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" id="CountryIndex" asp-area="" asp-controller="Country" asp-action="Index">Countries</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="City" asp-action="Index">Cities</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Language" asp-action="Index">Language</a>
                                        </li>
                                    </ul>
                                </li>

                                @if (User.IsInRole("SuperAdmin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-danger" asp-area="" asp-controller="Account" asp-action="Register">Authorize Login</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-danger" asp-area="" asp-controller="Admin" asp-action="Index">Admin Zone</a>
                                    </li>
                                }
                                    <li class="nav-item">
                                        <p class="nav-link text-success">@User.Identity.Name</p>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-warning" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                                    </li>
                            </ul>
                        </div> <!-- navbar-collapse.// -->
                    </div> <!-- container-fluid.// -->
                } <!-- EndIf Check Roles-->
            } <!-- EndIf Check Authentication-->
        </nav>
        @if (User.Identity.IsAuthenticated)
         {
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-link" asp-area="" asp-controller="Country" asp-action="Index">Country</a>
                            <a class="nav-link" asp-area="" asp-controller="State" asp-action="Index">State</a>
                            <a class="nav-link" asp-area="" asp-controller="City" asp-action="Index">City</a>
                            <a class="nav-link" asp-area="" asp-controller="Language" asp-action="Index">Language</a>
                            <a class="nav-link" asp-area="" asp-controller="Skills" asp-action="Index">Skills</a>
                        </div>
                    </div>
                </div>
            </nav>
         }
        </header>
    <div class="container">
        <div>
            @RenderBody()
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <hr>
        <div class="container">
            &copy; 2022 - Service Offering Platform(Louis Lim) - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/all.js"></script>
    <script src="~/js/Layout2Script.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>